<h1>Restaurants#edit</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= simple_form_for  @restaurant  do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.submit "Update restaurant", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>