<h1>Restaurants#show</h1>
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>:  <%= review.rating %> out of 5</li>
  <% end %>
</ul>

<%= link_to "Edit restaurant /", edit_restaurant_path(@restaurant) %>

<%= link_to "Add new review /", new_restaurant_review_path(@restaurant) %>

<%= link_to "Back to list", restaurants_path %>


